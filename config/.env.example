# Photo Collage Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=photo_collage
DB_USER=photo_collage
DB_PASSWORD=your-database-password-here

# Security
# Generate a strong random secret: php -r "echo bin2hex(random_bytes(32));"
CSRF_SECRET=generate-a-strong-random-secret-here
SESSION_NAME=photo_sess

# Email Configuration (optional, for password resets)
MAIL_FROM=noreply@localhost
MAIL_REPLY_TO=noreply@localhost
MAIL_TEST=test@example.com
