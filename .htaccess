# Disable directory listings
Options -Indexes

# Redirect to public directory if DocumentRoot is not set correctly
RewriteEngine On

# If accessing root of this directory, redirect to public
RewriteCond %{REQUEST_URI} ^/?$
RewriteRule ^$ photo-collage/public/ [L,R=301]

# Route all requests to public directory (except assets, api, and public itself)
RewriteCond %{REQUEST_URI} !^/photo-collage/public/
RewriteCond %{REQUEST_URI} !^/photo-collage/assets/
RewriteCond %{REQUEST_URI} !^/photo-collage/api/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ photo-collage/public/$1 [L]

